## -*- coding: utf-8 -*-
<%namespace name="helper" file="index_helper.tmpl"/>
<%namespace name="comments" file="comments_helper.tmpl"/>
<%inherit file="base.tmpl"/>
<%block name="content">
    % for post in posts:
        <div class="postbox">
        <p class="post-title"><a href="${post.permalink()}">${post.title()}</a></p>
        ${post.text(teaser_only=index_teasers)}
        % if not post.meta('nocomments'):
            ${comments.comment_link(post.permalink()+"#disqus_thread", post.base_path)}
        % endif
        <div class="post-details">
            ${helper.post_social(post)}
            <small>
                 ${messages("Posted")}: <time class="published easydate" datetime="${post.date.isoformat()}">${post.formatted_date(date_format)}</time>
                  | by ${blog_author}
            </small></div>
        </div>
    % endfor
    ${helper.html_pager()}
    ${comments.comment_link_script()}
    ${helper.mathjax_script(post)}
</%block>
