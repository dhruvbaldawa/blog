</head>
<body>
<div>
<!--Body content-->
<div class="sidepanel small-12 medium-4 large-4">
    <div class="contain-to-grid">
        <nav class="top-bar" data-topbar>
            <ul class="title-area">
              <li class="name"></li>
              <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
            </ul>
            <section class="top-bar-section">
                <!-- Left Nav Section -->
                <ul>
                    ${html_sidebar_links()}
