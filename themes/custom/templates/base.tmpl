## -*- coding: utf-8 -*-
<%namespace file="base_helper.tmpl" import="*"/>
${set_locale(lang)}
<!DOCTYPE html>
<!--[if IE 9]><html class="lt-ie10" lang="${lang}" ><![endif]-->
<html class="no-js" lang="${lang}">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    ${html_head()}
    <%block name="extra_head">
    </%block>
    ${extra_head_data}
</head>
<body>
<!-- Menubar -->
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">

        <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

            <a class="brand" href="${abs_link('/')}">
            ${blog_title}
            </a>
            <!-- Everything you want hidden at 940px or less, place within here -->
            <div class="nav-collapse collapse">
                <ul class="nav">
                    ${html_sidebar_links()}
                </ul>
                %if search_form:
                    ${search_form}
                %endif
                <ul class="nav pull-right">
                <%block name="belowtitle">
                %if len(translations) > 1:
                    <li>${html_translations()}</li>
                %endif
                </%block>
                <%block name="sourcelink"> </%block>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End of Menubar -->
<div>
    <!--Body content-->

<div class="row">
    <div class="sidemenu small-12 large-4 centered column">
        <%block name="sidebar">
            <div class="media">
                <img class="pull-left thumbnail" src="http://www.gravatar.com/avatar/0b7c937b3071a76c73c929507d484fdb" />
                <div class="media-body">
                    <h4 class="media-heading">Dhruv Baldawa</h4>
                    <h5 class="mute">Mumbai, India</h5>
                    ${social_icons()}
                </div>
            </div>
            <hr>
            <div class="media">
                <div class="media-heading"><strong>GDG Devfest 2013</strong></div>
                <ul>
                    <li><a href="http://www.dhruvb.com/blog/presentations/python/" target="_blank">Python slides</a></li>
                    <li><a href="http://www.dhruvb.com/pyfeedback" target="_blank">Python session feedback</a></li>
                </ul>
            </div>
        </%block>
    </div>
    <div class="content medium-12 large-8 centered column">
        <%block name="content"></%block>
    </div>
</div>

    <!--End of body content-->
</div>
<div class="footerbox">
    ${content_footer}
</div>
${late_load_js()}
${analytics}
    <script type="text/javascript">jQuery(".colorbox").colorbox({maxWidth: "100%"});
    jQuery(function($) {
        $(".easydate").easydate();
    });
    </script>
</body>
