        <%block name="sidebar">
            <hr>
            <ul class="site-menu">
                <li><a href="http://www.dhruvb.com/blog/presentations/python/" target="_blank">Python slides</a></li>
                <li><a href="http://www.dhruvb.com/pyfeedback" target="_blank">Python session feedback</a></li>
            </ul>
        </%block>
    </div>
</div>
<div class="content small-12 medium-6 medium-push-5 large-6 column end">
    <%block name="content"></%block>
    <div class="footer">
        ${content_footer}
    </div>
</div>
