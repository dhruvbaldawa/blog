        <%block name="sidebar">
            <div class="box">
                <div class="media-heading"><strong>GDG Devfest 2013</strong></div>
                <ul>
                    <li><a href="http://www.dhruvb.com/blog/presentations/python/" target="_blank">Python slides</a></li>
                    <li><a href="http://www.dhruvb.com/pyfeedback" target="_blank">Python session feedback</a></li>
                </ul>
            </div>
        </%block>
    </div>
</div>
<div class="content small-12 medium-6 medium-offset-5 large-6 large-offset-5 column end">
    <%block name="content"></%block>
</div>
<div class="footer small-12 medium-6 medium-offset-5 large-6 large-offset-5 column end">
    ${content_footer}
</div>
<!--End of body content-->
</div>

${late_load_js()}
${analytics}
